generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  seed          = "prisma/seed.ts"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Region {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  Countries Country[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Country {
  id       Int    @id @default(autoincrement())
  iso2Code String @unique @db.VarChar(2)
  iso3Code String @unique @db.VarChar(3)

  englishShortName String  @unique
  englishLongName  String?
  domesticName     String  @unique
  aliases          String  @db.NVarChar(max)

  lat  Float
  long Float

  regionId Int
  Region   Region @relation(fields: [regionId], references: [id])

  Cities City[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id           Int     @id @default(autoincrement())
  englishName  String
  domesticName String?
  aliases      String
  isCapital    Boolean

  lat  Float
  long Float

  countryId Int
  country   Country @relation(fields: [countryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([englishName, lat, long], name: "cityLocation")
}
